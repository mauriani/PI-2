{
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": [
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@babel/eslint-parser",
  "plugins": [
    "react",
    "prettier",
    "react-native-reanimated/plugin"
  ],
  "rules": {
    "no-unused-vars" : 2,
    "camelcase": "off",
    "no-undef" : 2,
    "import/first":"off",
    "react/prop-types": "off",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  },
  "parserOptions": {
    "sourceType": "module"
}
}
